{
  "manifest_version": 3,
  "name": "LinkedIn Post Filter",
  "version": "1.0",
  "description": "Hide LinkedIn posts containing specific keywords",

  "permissions": ["storage", "activeTab"],

  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Post Filter"
  },

  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
